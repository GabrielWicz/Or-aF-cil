<h1>{{title}}</h1>

<form action="/produtos/editar/{{produto.id}}" method="POST"
    style="max-width: 400px; border: 1px solid #ccc; padding: 15px; border-radius: 8px;">
    <div style="margin-bottom: 10px;">
        <label for="nome" style="display: block; font-weight: bold; margin-bottom: 4px;">Nome:</label>
        <input type="text" id="nome" name="nome" value="{{produto.nome}}" required
            style="width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label for="categoria" style="display: block; font-weight: bold; margin-bottom: 4px;">Categoria:</label>
        <input type="text" id="categoria" name="categoria" value="{{produto.categoria}}" required
            style="width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label for="quantidade" style="display: block; font-weight: bold; margin-bottom: 4px;">Quantidade:</label>
        <input type="number" id="quantidade" name="quantidade" min="0" value="{{produto.quantidade}}" required
            style="width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label for="valor" style="display: block; font-weight: bold; margin-bottom: 4px;">Valor:</label>
        <input type="number" id="valor" name="valor" min="0" step="0.01" value="{{produto.valor}}" required
            style="width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" />
    </div>

    <button type="submit"
        style="background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer; font-weight: bold;">Salvar
        Alterações</button>
</form>

<a href="/estoque" style="display: inline-block; margin-top: 10px; color: #555;">&#8592; Voltar ao Estoque</a>